@model IEnumerable<waywhiteMarket.Models.TProduct>
@using waywhiteMarket.Models;
@inject ProductDbContext _context;

@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_MemberStyle.cshtml";
}
<script>
    window.addEventListener("load",function(){
    var storage = localStorage;
    var dad = document.getElementById("daddy");
    var clearStorage = document.getElementById("clearCart");
    clearStorage.addEventListener("click",function(){
        storage.clear();
    })
    for(let i = 0 ;i < Number(storage.getItem('amount'));i++){
        var value = storage.getItem(i);
        if(value != null){
            dad.innerHTML +=`<tr><td>${value}</td><td>XL</td><td>1</td></tr>`;
        }
        
    }
    })
 
</script>

<div  style="width:80%;margin-left:10%;margin-top:5%">
<table class="table table-Secondary table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FName)
            </th>
            <th>
                Size
            </th>
            <th>
                Amount
            </th>          
        </tr>
    </thead>
    <tbody  id="daddy">
      
    </tbody>
</table>
</div>
<a id="clearCart" href="https://localhost:7113/Member/Cart" type="button" class="btn btn-outline-dark" style="margin-left:45%"/>clearCart</a>
