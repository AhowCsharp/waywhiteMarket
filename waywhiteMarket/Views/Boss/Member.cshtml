@model IEnumerable<waywhiteMarket.Models.TMember>
@using waywhiteMarket.Models;
@inject ProductDbContext _context;
@{
    var MemberList = _context.TMembers.ToList();
}

@{
    ViewData["Title"] = "Member";
    Layout = "~/Views/Shared/_BossStyle.cshtml";
}

<div style="width:80%;margin-left:10%;margin-top:5%">
<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>
                    @Html.DisplayNameFor(model => model.FName)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.FAccount)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.FMail)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.FPower)
            </th>
           
            <th>
                Manage
            </th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in MemberList)
            {
            <tr>
                <td>
                        @item.FName
                        @*@Html.DisplayFor(modelItem => item.FName)*@
                </td>
                <td>
                        @item.FAccount
                        @*@Html.DisplayFor(modelItem => item.FPrice)*@
                </td>

                <td>
                        @item.FMail
                        @*@Html.DisplayFor(modelItem => item.FDescription)*@
                </td>
                    <td>
                        @item.FPower
                        @*@Html.DisplayFor(modelItem => item.FDescription)*@
                    </td>

                <td>
                        <a asp-action="MemberDelete" type="button" asp-route-id="@item.FName" class="btn btn-warning">Delete</a>
                </td>
            </tr>
            }
    </tbody>
</table>