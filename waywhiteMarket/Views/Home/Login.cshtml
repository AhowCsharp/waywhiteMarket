@model waywhiteMarket.Models.TMember

@{
    ViewData["Title"] = "Login";
}


<div class="container">

<div class="row">
    <div class="col-6" style="margin-left:25%;margin-top:7%">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">帳號</label>
                <input type="text" name="FAccount" class="form-control" required/>
            </div>
            <div class="form-group">
                <label class="control-label">密碼</label>
                <input type="password" name="FPassword" class="form-control" required/>
            </div>         
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-dark" />
                
            </div>
        </form>
    </div>
</div>
</div>
